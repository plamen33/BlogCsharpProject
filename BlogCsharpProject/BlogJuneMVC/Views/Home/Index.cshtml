@model List<BlogJuneMVC.Models.Post>
<section class="row">
    @foreach (var post in Model)
    {
        <article class="post col-md-4">
            <h2><a href="/Posts/Details/@post.Id">@BlogJuneMVC.Classes.Utils.CutText(post.Title, 20)</a></h2>
            <div>
                Posted on <i>@post.Date</i>
                @if (post.Author != null)
                {
                    @:by <i>@post.Author.FirstName (@post.Author.UserName)</i>
                }
            </div>

            <p>
            @BlogJuneMVC.Classes.Utils.CutText(post.Body, 200)
            </p>
        </article>
    }
</section>

