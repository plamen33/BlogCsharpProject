@model List<BlogJuneMVC.Models.Category>
@{
    ViewBag.Title = "Index";
}

<h3>&nbsp;</h3>
@{int n = 1; }
<div class="container">
    <div class="well">
        <h2>All Categories - @Html.ActionLink("Create", "Create", "Categories", null, new { @class = "btn btn-success" })</h2>
        <div class="row">
            <table class="table table-striped table-hover col-sm-12">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@(n).</td>
                            <td><strong style="color:rebeccapurple;">@category.Name</strong></td>
                            <td>
                                @Html.ActionLink("EDIT", "Edit", "Categories", new { @id = category.Id }, new { @class = "btn btn-warning" })
                                @Html.ActionLink("Delete", "Delete", "Categories", new { @id = category.Id }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                        n = n + 1;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>