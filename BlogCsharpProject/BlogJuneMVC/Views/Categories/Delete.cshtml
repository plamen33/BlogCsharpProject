@model BlogJuneMVC.Models.Category

@{
    ViewBag.Title = "Delete";
}
<h3>&nbsp;</h3>
<div class="container">
    <div class="well">
        <h2>Delete Category</h2>
        @using (Html.BeginForm("Delete", "Categories", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    @Html.ActionLink("Cancel", "Index", "Categories", new { @class = "btn btn-default" })
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



