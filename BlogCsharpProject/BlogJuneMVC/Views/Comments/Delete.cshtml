@model BlogJuneMVC.Models.Comment

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Comments</h2>
<div class="alert alert-danger">
    <h4>
    <strong>Warning !</strong> Are you sure you want to delete this comment?
    </h4>
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Post.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Post.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Text)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Text)
        </dd>

       

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @*beautiful button:*@

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-default" href="@Url.Action("Index", "Comments")">Back to Comments</a>
        </div>
    }
</div>


